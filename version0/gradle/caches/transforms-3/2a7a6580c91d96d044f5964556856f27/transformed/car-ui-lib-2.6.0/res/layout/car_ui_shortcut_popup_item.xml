<com.android.car.ui.shortcutspopup.CarUiArrowContainerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="false"
    app:carUiArrowColor="@color/car_ui_shortcuts_arrow_color"
    app:carUiArrowHeight="21dp"
    app:carUiArrowRadius="4dp"
    app:carUiArrowWidth="25dp"
    app:carUiOffsetY="4dp"
    app:carUiContentView="@id/car_ui_shortcuts_contentView"
    app:carUiContentViewDrawable="@drawable/car_ui_shortcuts_rounded_selector"
    app:carUiOffsetX="26dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/car_ui_shortcuts_contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_gravity="center"
        android:paddingBottom="24dp"
        android:paddingEnd="32dp"
        android:paddingStart="24dp"
        android:paddingTop="24dp">

        <ImageView
            android:id="@+id/car_ui_content_left_drawable"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/car_ui_shortcuts_item_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/car_ui_content_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:textColor="@color/car_ui_shortcuts_item_text_color"
            app:layout_constraintBottom_toBottomOf="@id/car_ui_content_left_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/car_ui_content_left_drawable"
            app:layout_constraintTop_toTopOf="@id/car_ui_content_left_drawable" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.android.car.ui.shortcutspopup.CarUiArrowContainerView>
