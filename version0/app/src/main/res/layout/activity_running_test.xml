<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunningTest">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/question"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="18dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentNameView"
        app:layout_constraintTop_toBottomOf="@id/questionText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:elevation="8dp"
        android:text="qr-code not scanned"
        android:textStyle="bold"
        android:textColor="#58D68D"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerView"
        app:layout_constraintTop_toBottomOf="@id/studentNameView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:elevation="8dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="#58D68D"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <org.opencv.android.JavaCameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/questionText"
        app:layout_constraintBottom_toTopOf="@id/nextQuestion" />
    <Button
        android:id="@+id/nextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_question"
        android:background="#00FFFFFF"
        android:textColor="@color/black"
        android:shadowColor="@color/shadow_white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
